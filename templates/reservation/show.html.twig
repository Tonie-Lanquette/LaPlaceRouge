{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>NumberPeople</th>
                <td>{{ reservation.numberPeople }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Shift</th>
                <td>{{ reservation.shift }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ reservation.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ reservation.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>


    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
