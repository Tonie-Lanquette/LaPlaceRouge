{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <h1 class='text-center text-4xl my-10'>Réservations</h1>

    <table class="table w-9/12 m-auto mt-10 mb-[10%] text-lg">
        <thead>
            <tr>
                <th class="border py-2 px-3">Nombre de personnes</th>
                <th class="border py-2 px-3">Date</th>
                <th class="border py-2 px-3">Service</th>
                <th class="border py-2 px-3">Prénom</th>
                <th class="border py-2 px-3">Nom</th>
                <th class="border py-2 px-3">Email</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td class="border py-2 px-3">{{ reservation.numberPeople }}</td>
                <td class="border py-2 px-3">{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
                <td class="border py-2 px-3">{{ reservation.shift }}</td>
                <td class="border py-2 px-3">{{ reservation.firstname }}</td>
                <td class="border py-2 px-3">{{ reservation.lastname }}</td>
                <td class="border py-2 px-3">{{ reservation.email }}</td>
                <td class="border py-2 px-3">
                    <a class='mx-1'>{{ include('reservation/_delete_form.html.twig') }}</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td class="border py-2 px-3" colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
